@model Franglais.Models.ChatRoom

@{
    ViewBag.Title = "Chat Room";
}

<h2>Chat Room <span id="roomId">@Model.Id</span></h2>

@*@(foreach(var user in Model.Users)
{
    Html.DisplayFor(model => user);
})*@

<div class="row">
    <div class="row col-md-12">
        <div id="chatWindow" class="col-md-6">

        </div>
    </div>
    <div class="row col-md-12">
        <div id="messageDiv" class="col-md-6">
            <input type="text" id="messageBox" class="col-md-8"/>
            <button onclick="chatRoomApp.SendMessage()">Send</button>
        </div>
    </div>    
</div>

@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/ChatRoom.js"></script>
}